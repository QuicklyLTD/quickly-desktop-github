{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "types": ["node"]
  },
  "include": [
    "main.ts",
    "main/**/*.ts"
  ],
  "exclude": [
    "node_modules/@types/express",
    "node_modules/@types/express-serve-static-core"
  ]
}
